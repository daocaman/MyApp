<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.text.Font?>
<BorderPane prefHeight="400" prefWidth="800" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="MovingFileController">
    <center>
        <GridPane prefHeight="400" prefWidth="800">
            <columnConstraints>
                <ColumnConstraints maxWidth="200.0" minWidth="10.0" prefWidth="117.0"/>
                <ColumnConstraints maxWidth="600.0" minWidth="10.0" prefWidth="430.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="80.0" minHeight="10.0" prefHeight="52.0"/>
                <RowConstraints maxHeight="80.0" minHeight="4.0" prefHeight="57.0"/>
                <RowConstraints maxHeight="80.0" minHeight="10.0" prefHeight="57.0"/>
                <RowConstraints maxHeight="80.0" minHeight="10.0" prefHeight="44.0"/>
                <RowConstraints maxHeight="80.0" minHeight="10.0" prefHeight="52.0"/>
            </rowConstraints>
            <children>
                <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.halignment="LEFT"
                      GridPane.valignment="BASELINE">
                    <children>
                        <TextField fx:id="tv_mv_source" prefHeight="29.0" prefWidth="271.0"/>
                        <Button fx:id="btn_mv_source" mnemonicParsing="false" text="Chọn thư mục" onAction="#openDirS">
                            <HBox.margin>
                                <Insets left="30.0"/>
                            </HBox.margin>
                            <styleClass>
                                <String fx:value="btn"/>
                                <String fx:value="btn-sm"/>
                                <String fx:value="btn-default"/>
                            </styleClass>
                        </Button>
                    </children>
                    <GridPane.margin>
                        <Insets bottom="10" left="10.0" top="10"/>
                    </GridPane.margin>
                </HBox>
                <Label text="Thư mục gốc">
                    <font>
                        <Font name="Times New Roman" size="30.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets left="20.0"/>
                    </GridPane.margin>
                    <styleClass>
                        <String fx:value="h5"/>
                        <String fx:value="text-info"/>
                    </styleClass>
                </Label>
                <Label text="Thư mục đích" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="20.0"/>
                    </GridPane.margin>
                    <styleClass>
                        <String fx:value="h5"/>
                        <String fx:value="text-info"/>
                    </styleClass>
                </Label>
                <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.halignment="LEFT"
                      GridPane.rowIndex="1" GridPane.valignment="BASELINE">
                    <children>
                        <TextField fx:id="tv_mv_target" prefHeight="29.0" prefWidth="271.0"/>
                        <Button fx:id="btn_mv_target" mnemonicParsing="false" text="Chọn thư mục" onAction="#openDirT">
                            <HBox.margin>
                                <Insets left="30.0"/>
                            </HBox.margin>
                            <styleClass>
                                <String fx:value="btn"/>
                                <String fx:value="btn-sm"/>
                                <String fx:value="btn-default"/>
                            </styleClass>
                        </Button>
                    </children>
                    <GridPane.margin>
                        <Insets bottom="10" left="10.0" top="10"/>
                    </GridPane.margin>
                </HBox>
                <Label fx:id="lb_mv_p" GridPane.columnIndex="1" GridPane.rowIndex="3" text="Files: ">
                    <GridPane.margin>
                        <Insets left="10.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="Tiến trình" GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets left="20.0"/>
                    </GridPane.margin>
                    <styleClass>
                        <String fx:value="h5"/>
                        <String fx:value="text-info"/>
                    </styleClass>
                </Label>
                <Button fx:id="btn_mv_start" mnemonicParsing="false" text="Bắt đầu" GridPane.columnIndex="1"
                        GridPane.halignment="RIGHT" GridPane.rowIndex="4" onAction="#move">
                    <GridPane.margin>
                        <Insets left="10.0" right="20.0"/>
                    </GridPane.margin>
                    <styleClass>
                        <String fx:value="btn"/>
                        <String fx:value="btn-sm"/>
                        <String fx:value="btn-success"/>
                    </styleClass>
                </Button>
                <ComboBox fx:id="cb_mv_f" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets left="10.0"/>
                    </GridPane.margin>
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="AZW3"/>
                            <String fx:value="MOBI"/>
                            <String fx:value="PDF"/>
                            <String fx:value="EPUB"/>
                        </FXCollections>
                    </items>
                </ComboBox>
                <Label text="Loại tệp" GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets left="20.0"/>
                    </GridPane.margin>
                    <styleClass>
                        <String fx:value="h5"/>
                        <String fx:value="text-info"/>
                    </styleClass>
                </Label>
            </children>
        </GridPane>
    </center>
    <top>
        <BorderPane prefHeight="34.0" prefWidth="800.0" BorderPane.alignment="CENTER"/>
    </top>
    <right>
        <ListView fx:id="lv_mv_file" prefHeight="235.0" prefWidth="253.0" BorderPane.alignment="CENTER"/>
    </right>
    <bottom>
        <BorderPane prefHeight="71.0" prefWidth="800.0" BorderPane.alignment="CENTER">
            <center>
                <Label text="\@An Đào _ 2020" BorderPane.alignment="CENTER"/>
            </center>
        </BorderPane>
    </bottom>
</BorderPane>
