    <center>
        <GridPane maxHeight="180.0" maxWidth="600.0" prefHeight="180.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="674.0" minWidth="10.0" prefWidth="582.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="55.0" minHeight="10.0" prefHeight="55.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="55.0" minHeight="10.0" prefHeight="55.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="55.0" minHeight="10.0" prefHeight="55.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="55.0" prefWidth="576.0" GridPane.halignment="CENTER"
                      GridPane.valignment="CENTER">
                    <children>
                        <TextField fx:id="tv_RO_folder" prefHeight="29.0" prefWidth="422.0"/>
                        <Button fx:id="btn_RO_choose" mnemonicParsing="false" onAction="#openFolder" prefHeight="29.0"
                                prefWidth="111.0" text="Chọn thư mục">
                            <HBox.margin>
                                <Insets left="48.0"/>
                            </HBox.margin>
                            <styleClass>
                                <String fx:value="btn"/>
                                <String fx:value="btn-sm"/>
                                <String fx:value="btn-default"/>
                            </styleClass>
                        </Button>
                    </children>
                    <GridPane.margin>
                        <Insets left="10.0"/>
                    </GridPane.margin>
                </HBox>
                <GridPane prefHeight="55.0" prefWidth="597.0" GridPane.rowIndex="1">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="141.0" minWidth="10.0" prefWidth="133.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="317.0" minWidth="10.0" prefWidth="138.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="397.0" minWidth="10.0" prefWidth="324.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="Folders:">
                            <GridPane.margin>
                                <Insets left="10.0"/>
                            </GridPane.margin>
                            <styleClass>
                                <String fx:value="h5"/>
                                <String fx:value="text-info"/>
                            </styleClass>
                        </Label>
                        <Label text="Files:" GridPane.columnIndex="1">
                            <styleClass>
                                <String fx:value="h5"/>
                                <String fx:value="text-info"/>
                            </styleClass>
                        </Label>
                        <Button fx:id="btn_RO_delete" mnemonicParsing="false" onAction="#doIt" text="Xóa Files"
                                GridPane.columnIndex="2" GridPane.halignment="RIGHT">
                            <GridPane.margin>
                                <Insets right="10.0"/>
                            </GridPane.margin>
                            <styleClass>
                                <String fx:value="btn"/>
                                <String fx:value="btn-sm"/>
                                <String fx:value="btn-danger"/>
                            </styleClass>
                        </Button>
                        <Label fx:id="lb_RO_fol" text="0" GridPane.halignment="RIGHT">
                            <GridPane.margin>
                                <Insets right="10.0"/>
                            </GridPane.margin>
                        </Label>
                        <Label fx:id="lb_RO_file" text="0" GridPane.columnIndex="1" GridPane.halignment="RIGHT">
                            <GridPane.margin>
                                <Insets right="10.0"/>
                            </GridPane.margin>
                        </Label>
                    </children>
                </GridPane>
                <Label text="Error" visible="false" GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets left="10.0"/>
                    </GridPane.margin>
                </Label>
                <GridPane GridPane.rowIndex="2">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="293.0" minWidth="10.0" prefWidth="101.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="512.0" minWidth="10.0" prefWidth="499.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="Information: ">
                            <GridPane.margin>
                                <Insets left="10.0"/>
                            </GridPane.margin>
                            <styleClass>
                                <String fx:value="h5"/>
                                <String fx:value="text-info"/>
                            </styleClass>
                        </Label>
                        <Label fx:id="lb_RO_infor" GridPane.columnIndex="1">
                            <GridPane.margin>
                                <Insets left="5.0"/>
                            </GridPane.margin>
                        </Label>
                    </children>
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                </GridPane>
            </children>
        </GridPane>
    </center>

</BorderPane>
